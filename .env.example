# =============================================================================
# Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Target Application Settings
# -----------------------------------------------------------------------------
TARGET_URL=https://example.com
TARGET_API_BASE=https://api.example.com/v1

# -----------------------------------------------------------------------------
# Database Configuration (Optional)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_NAME=api_assessment
DB_USER=root
DB_PASSWORD=your_password_here

# -----------------------------------------------------------------------------
# Proxy Settings (Optional)
# -----------------------------------------------------------------------------
# HTTP_PROXY=http://127.0.0.1:8080
# HTTPS_PROXY=http://127.0.0.1:8080
# NO_PROXY=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Playwright Browser Settings
# -----------------------------------------------------------------------------
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/assessment.log

# -----------------------------------------------------------------------------
# Output Directories
# -----------------------------------------------------------------------------
OUTPUT_DIR=./output
REPORTS_DIR=./reports

# -----------------------------------------------------------------------------
# Crypto Analysis Settings
# -----------------------------------------------------------------------------
# Known encryption keys for testing (NEVER use production keys!)
# TEST_AES_KEY=0123456789abcdef0123456789abcdef
# TEST_AES_IV=fedcba9876543210

# -----------------------------------------------------------------------------
# API Credentials for Testing (Optional)
# -----------------------------------------------------------------------------
# TEST_USERNAME=test_user
# TEST_PASSWORD=test_password

# -----------------------------------------------------------------------------
# Third-party Service Keys (Optional)
# -----------------------------------------------------------------------------
# VIRUSTOTAL_API_KEY=your_key_here
# SHODAN_API_KEY=your_key_here
